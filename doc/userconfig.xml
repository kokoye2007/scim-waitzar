<fop version="1.0">

  <base>./</base>

  <renderers>
  
    <renderer mime="application/pdf">
      <fonts>
	<font  metrics-url="fonts/myanmar3.xml"  
               kerning="yes" 
               embed-url="fonts/Myanmar3.ttf">
          <font-triplet name="Myanmar3" style="normal" weight="normal"/>
        </font>

	<font  metrics-url="fonts/myanmar3-bold.xml"  
               kerning="yes" 
               embed-url="fonts/Myanmar3.ttf">
          <font-triplet name="Myanmar3" style="normal" weight="bold"/>
        </font>
      
        <font  metrics-url="fonts/vera.xml" 
               kerning="yes" 
               embed-url="/usr/share/fonts/truetype/ttf-bitstream-vera/Vera.ttf">
          <font-triplet name="Bitstream Vera Sans" style="normal" weight="normal"/>
        </font>
	
        <font  metrics-url="fonts/vera-italic.xml" 
               kerning="yes" 
               embed-url="/usr/share/fonts/truetype/ttf-bitstream-vera/Vera.ttf">
          <font-triplet name="Bitstream Vera Sans" style="italic" weight="normal"/>
        </font>
	
        <font  metrics-url="fonts/vera-bold.xml" 
               kerning="yes" 
               embed-url="/usr/share/fonts/truetype/ttf-bitstream-vera/Vera.ttf">
          <font-triplet name="Bitstream Vera Sans" style="normal" weight="bold"/>
        </font>
      </fonts>
    </renderer>
        
  </renderers>
</fop>


